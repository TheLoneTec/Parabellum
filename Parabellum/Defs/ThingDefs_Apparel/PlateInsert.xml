<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
	
	<!-- Basic Trauma Plate -->
	<ThingDef ParentName="ApparelMedievalBase">
		<defName>PaB_TP</defName>
		<label>Basic Trauma Plate</label>
		<description>A soft material made insert trauma plate for body armor/vest, significantly reduce any incoming blunt force from impacts, not very effective counter sharp penetration damage.</description>
		<graphicData>
			<texPath>Things/Apparel/PlateInsert/TP</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>		
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<statBases>
			<WorkToMake>2600</WorkToMake>
			<MaxHitPoints>30</MaxHitPoints>
			<Flammability>1</Flammability>
			<Mass>1.2</Mass>
			<Bulk>4</Bulk>
			<WornBulk>1</WornBulk>
			<EquipDelay>0.8</EquipDelay>
			<Insulation_Heat>2</Insulation_Heat>
			<Insulation_Cold>4</Insulation_Cold>
			<StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.6</StuffEffectMultiplierInsulation_Heat>
			<StuffEffectMultiplierArmor>1.2</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>1</ArmorRating_Sharp>
			<ArmorRating_Blunt>80</ArmorRating_Blunt>
			<ArmorRating_Heat>0</ArmorRating_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.01</MoveSpeed>
			<Suppressability>-0.02</Suppressability>
		</equippedStatOffsets>
		<generateCommonality>0.4</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<layers>
				<li>Belt</li>
			</layers>
			<tags>
				<li>Military</li>
				<li>IndustrialMilitaryBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags> 
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(1.0,1.0,1.0)</only>
				</li>
			</options>
		</colorGenerator>
		<thingCategories>
			<li>ApparelUtility</li>
			<li>SetParabellumIP</li>
		</thingCategories>
		<generateAllowChance>0.6</generateAllowChance>
        <recipeMaker>
			<skillRequirements>
					<Crafting>6</Crafting>
			</skillRequirements>
            <researchPrerequisite>Apparel_B1</researchPrerequisite>
        </recipeMaker>
	</ThingDef>
	
