	<!-- ================== Craft Crate ================== -->

	<RecipeDef ParentName="cratecraftbase">
		<defName>BuildMachinegun_Crate</defName>
		<label>Build a Machinegun crate</label>
		<description>Use this carte to build most Ancient Machineguns, a type of stationary manned turret, the caliber can vary.</description>
		<jobString>Building Machinegun crate.</jobString>
		<workAmount>9000</workAmount>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Mechanism</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
				<categories>
				<li>Metallic</li>
                  </categories>
				</filter>
				<count>28</count>
			</li>
		</ingredients>
		<products>
			<Pa_Machinegun_Crate>1</Pa_Machinegun_Crate>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mechanism</li>
				<li>Weapon_Parts</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
             </categories>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>FabricationBench</li>
		</recipeUsers>
		<researchPrerequisite>Parabellum_Beta</researchPrerequisite>
	</RecipeDef>

