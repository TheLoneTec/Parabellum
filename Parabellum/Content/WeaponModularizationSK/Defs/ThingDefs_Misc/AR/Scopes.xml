				<compPropertiesObjectPatch>
					<il Reader-Class="CombatExtended.CompProperties_AmmoUser">
						<reloadOneAtATime>true</reloadOneAtATime>
						<reloadTime>0.5</reloadTime>
					</il>
				</compPropertiesObjectPatch>
			</li>
		</comps>
