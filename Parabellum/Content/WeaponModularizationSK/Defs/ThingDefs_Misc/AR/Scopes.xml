<Defs>

	<!--Sights-->

	<ThingDef Name="ZF4Scope" ParentName="GunPartBase" Abstract="True">
		<label>ZF-4 x4 Scope</label>
		<description>The Zielfernrohr 4(ZF-4) is copy of the Soviet PU scope and designed for mass production. The scope features a 4x zoom and is fitted with a T-Post reticle. It is available for most German WWII rifles.</description>
		<statBases>
			<WorkToMake>2200</WorkToMake>
			<Mass>0.52</Mass>
			<Bulk>0.5</Bulk>
		</statBases>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Scope_ACOG</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Scope_acog</uiIconPath>
		<!--<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>-->
		<costList>
			<Weapon_Parts>1</Weapon_Parts>
			<Glass>2</Glass>
			<Plasteel>10</Plasteel>
		</costList>
		<recipeMaker>
			<recipeUsers>
				<li>WeaponCraftingWorkTable</li>
			</recipeUsers>
			<researchPrerequisite>Sniper_rifles_C1</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>
	
	<ThingDef ParentName="ZF4Scope">
		<defName>Module_ZF4S</defName>
		<label>ZF-4 x4 Scope(StG/MP)</label>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Scopes/ZF4</PartTexPath>
				<statOffset>
					<Bulk>0.5</Bulk>
				</statOffset>
				<verbPropertiesOffseter>
					<li>
						<range>4</range>
					</li>
				</verbPropertiesOffseter>
				<statMultiplier>
					<SightsEfficiency>1.2</SightsEfficiency>
					<ShotSpread>0.75</ShotSpread>
					<RangedWeapon_Cooldown>1.1</RangedWeapon_Cooldown>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>
	
