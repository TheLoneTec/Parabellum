<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!--StG Magazine-->
	<ThingDef ParentName="GunPartBase">
		<defName>Module_StGDT</defName>
		<label>Duct tape dual stack StG magazine</label>
		<description>Improvised modification with duct tape to double stack magazine side by side for faster reload.</description>
		<statBases>
			<WorkToMake>100</WorkToMake>
			<Mass>0.432</Mass>
			<Bulk>0.6</Bulk>
		</statBases>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Magazine_Generic</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag</uiIconPath>
		<costList>
			<ComponentMedieval>1</ComponentMedieval>
		</costList>
		<recipeMaker>
			<recipeUsers>
				<li>WeaponCraftingWorkTable</li>
			</recipeUsers>
			<researchPrerequisite>Machining</researchPrerequisite>
			<skillRequirements>
				<Crafting>1</Crafting>
			</skillRequirements>
		</recipeMaker>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Magazines/DT</PartTexPath>
				<compPropertiesMultiplier>
					<il Reader-Class="CombatExtended.CompProperties_AmmoUser">
						<reloadTime>0.6</reloadTime>
					</il>
				</compPropertiesMultiplier>
			</li>
		</comps>
	</ThingDef>
	
