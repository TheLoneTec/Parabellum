	<ThingDef ParentName="GunPartBase">
		<defName>Module_G43Kurz</defName>
		<label>G43 30rnd StG magazine convertion</label>
		<description>G43 with assault rifle magazine convertion, it has 30rnd of capacity(7.92x33mm Kurz).</description>
		<statBases>
			<WorkToMake>500</WorkToMake>
			<Mass>0.1</Mass>
			<Bulk>0.6</Bulk>
		</statBases>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Magazine_Generic</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag</uiIconPath>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<Weapon_Parts>1</Weapon_Parts>
		</costList>
		<recipeMaker>
			<recipeUsers>
				<li>AdvWeaponCraftingWorkTable</li>
			</recipeUsers>
			<researchPrerequisite>Range_C2</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Magazines/G43StG</PartTexPath>
				<setRandomPartWhenCreate>true</setRandomPartWhenCreate>
				<verbPropertiesOffseter>
					<li>
						<range>-5</range>
					</li>
				</verbPropertiesOffseter>
				<verbPropertiesObjectPatch>
					<li>
						<burstShotCount>3</burstShotCount>
						<defaultProjectile>Bullet_792x33mmK_J</defaultProjectile>
						<ticksBetweenBurstShots>4</ticksBetweenBurstShots>
					</li>
				</verbPropertiesObjectPatch>
				<verbPropertiesMultiplier>
					<li>
						<warmupTime>0.75</warmupTime>
					</li>
				</verbPropertiesMultiplier>
				<statMultiplier>
					<SightsEfficiency>0.9</SightsEfficiency>
					<ShotSpread>2.5</ShotSpread>
					<SwayFactor>0.9</SwayFactor>
					<RangedWeapon_Cooldown>0.55</RangedWeapon_Cooldown>
				</statMultiplier>
				<compPropertiesObjectPatch>
					<il Reader-Class="CombatExtended.CompProperties_AmmoUser">
						<reloadTime>2.2</reloadTime>
						<magazineSize>30</magazineSize>
						<ammoSet>AmmoSet_792x33mmK</ammoSet>
					</il>
				</compPropertiesObjectPatch>
				<attachmentProperties>
					<li>
						<id>ModAR_SubMagazine</id>
						<name>magazine</name>
						<UITexPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag</UITexPath>
						<postion>(-0.02,0.1,0)</postion>
						<scale>(1,0,1)</scale>
						<allowEmpty>true</allowEmpty>
						<filter>
							<thingDefs>
								<li>Module_StGDT</li>
							</thingDefs>
						</filter>
					</li>
				</attachmentProperties>
			</li>
		</comps>
	</ThingDef>
	
</Defs>